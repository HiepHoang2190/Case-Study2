                                <!-- Mobile Menu -->
                                <div class="col-12">
                                    <div class="mobile_menu d-block d-lg-none"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Header End -->
                </header>

                <div>
                    <main role="main" class="pb-3">



                        <!-- Main Content -->

                        @RenderBody()


                    </main>
                </div>
            </div>


            <footer>

