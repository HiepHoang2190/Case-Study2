                    <!-- Header Start -->
                    <div class="header-area " style=" background-color: #55efc4">
                        <div class="main-header header-sticky">
                            <div class="container-fluid">
                                <div class="menu-wrapper">
                                    <!-- Logo -->
                                    <div class="logo">
                                        <a asp-controller="Home" asp-action="Index" class="fontsize"><i class="fas fa-apple-alt"></i>Ku Sộp Store</a>
                                    </div>
                                    <!-- Main-menu -->
                                    <div class="main-menu d-none d-lg-block">
                                        <nav>
                                            <ul id="navigation">
                                                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                                                <li>
