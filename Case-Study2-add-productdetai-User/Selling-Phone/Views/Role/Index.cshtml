@model IEnumerable<Role>
@{
    ViewBag.Title = "Role management";
}

    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h3>
                    @ViewBag.Title
                </h3>
                <a asp-controller="Role" asp-action="Create" class="btn btn-warning" style="width:auto">Create role</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover mt-2 mb-4" id="dataTable" width="100%" cellspacing="0">
                        <thead class="table-dark">
                            <tr>
                                <th>Id</th>
                                <th>Role Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var role in Model)
                                {
                                    <tr>
                                        <td>
                                            @role.RoleId
                                        </td>
                                        <td>
                                            @role.RoleName
                                        </td>
                                        <td>
                                            <a asp-controller="Role" asp-action="Edit" asp-route-id="@role.RoleId" class="text-warning"><i class="far fa-edit"></i></a>
                                            <a asp-controller="Role" asp-action="Delete" asp-route-id="@role.RoleId" class="text-danger"><i class="fas fa-trash-alt"></i></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>