@model Selling_Phone.ViewModels.Category.DeleteCategoryViewModel
@{
    ViewBag.Title = "Delete Category";
}
    <div class="container">
        <h3>Category management &gt; @ViewBag.Title </h3>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="CategoryName"></label>
            </div>
            <div class="col-sm-10 ">
                <input asp-for="CategoryName" class="form-control" readonly />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-12">
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#DeleteCategoryModal">
                    Delete
                </button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-warning">Back</a>
            </div>
        </div>

        <div class="modal" id="DeleteCategoryModal">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <h4 class="modal-title">Confirm delete role</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <div class="modal-body">
                        Are you sure want to remove this role?
                    </div>

                    <div class="modal-footer">
                        <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>