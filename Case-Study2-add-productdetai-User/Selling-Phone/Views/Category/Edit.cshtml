@model Selling_Phone.ViewModels.Category.EditCategoryViewModel


<div class="container mt-4">
    <h3>Category Management &gt; @ViewBag.Title</h3>
    <form asp-controller="Category" asp-action="Edit" method="post" class="mt-2">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input hidden asp-for="Id" />
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="CategoryName"></label>
            </div>
            <div class="col-sm-10 ">
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-warning">Back</a>
            </div>

        </div>

    </form>
</div>