@model IEnumerable<Selling_Phone.ViewModels.UserViewModel>
@{
    ViewBag.Title = "Management User";
}
@inject SignInManager<ApplicationUser> signInManager

    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h3>
                    @ViewBag.Title
                </h3>
                <a asp-controller="User" asp-action="Create" class="btn btn-warning" style="width:auto">Create User</a>
            </div>
            <div class="card-body">
                @if (signInManager.IsSignedIn(User))
                {
                    if (User.IsInRole("System Admin"))
                    {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover mt-2 mb-4" id="dataTable" width="100%" cellspacing="0">
                        <thead class="table-dark">
                            <tr>
                                <th>Id</th>
                                <th>Email</th>
                                @*<th>City</th>
                                <th>Address</th>*@
                                <th>Gender</th>
                                <th>Day of Birthday</th>
                                <th>Roles</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var user in Model)
                                {
                            <tr>
                                <td>
                                    @user.UserId
                                </td>
                                <td>
                                    @user.Email
                                </td>
                                @*<td>
                                    @user.City
                                </td>
                                <td>
                                    @user.Address
                                </td>*@
                                <td>
                                    @user.Gender
                                </td>
                                <td>
                                    @user.DOB.ToString("dd/MM/yyyy ")
                                </td>
                                <td>
                                    @user.RolesName
                                </td>
                                <td>
                                    <a asp-controller="User" asp-action="Edit" asp-route-id="@user.UserId" class="text-warning"><i class="far fa-edit"></i></a>
                                    <a asp-controller="User" asp-action="Delete" asp-route-id="@user.UserId" class="text-danger"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                                }
                            }
                        </tbody>

                    </table>
                </div>
                    }
                    if (User.IsInRole("Admin"))
                    {
            <div class="table-responsive">
                <table class="table table-bordered table-hover mt-2" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>
                            <th>Email</th>
                            <th>City</th>
                            <th>Address</th>
                            <th>Day of Birthday</th>
                            <th>Roles</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var user in Model)
                            {
                        <tr>
                            <td>
                                @user.UserId
                            </td>
                            <td>
                                @user.Email
                            </td>
                            @*<td>
                                @user.City
                            </td>
                            <td>
                                @user.Address
                            </td>*@
                            <td>
                                @user.Gender
                            </td>
                            <td>
                                @user.DOB.ToString("dd/MM/yyyy ")
                            </td>
                            <td>
                                @user.RolesName
                            </td>

                        </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>
                    }
                }
            </div>
        </div>

    </div>